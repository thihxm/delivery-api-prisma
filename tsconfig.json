{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "rootDir": "./",
    "outDir": "./dist",
    "baseUrl": "./src",
    // "paths": {
    //   "@modules/*": ["modules/*"],
    //   "@config/*": ["config/*"],
    //   "@shared/*": ["shared/*"],
    //   "@errors/*": ["errors/*"],
    //   "@utils/*": ["utils/*"]
    // },
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext"],
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}